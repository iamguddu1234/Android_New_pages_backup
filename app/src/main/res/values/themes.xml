<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiracAI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/theme_color</item>


        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>






    <style name="MySpinnerLook" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/_24ssp</item>
    </style>

    <style name="TextInputLayoutAppearanceDifferent" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="colorOnSurface">#5e5d5d</item>
        <item name="colorPrimary">#5e5d5d</item>
    </style>


    //Custom Card Corner

    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_18sdp</item>
        <item name="cornerSizeTopRight">@dimen/_18sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_1sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_18sdp</item>
    </style>




    <style name="CustomCardCorners_2" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners_2</item>
    </style>

    <style name="ShapeAppearance_custom_corners_2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_1sdp</item>
        <item name="cornerSizeTopRight">@dimen/_18sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_18sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_18sdp</item>
    </style>


    <style name="CustomCardCorners_3" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners_3</item>
    </style>

    <style name="ShapeAppearance_custom_corners_3" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_30sdp</item>
        <item name="cornerSizeTopRight">@dimen/_30sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="CustomCardCorners_4" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners_4</item>
    </style>

    <style name="ShapeAppearance_custom_corners_4" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_10sdp</item>
        <item name="cornerSizeTopRight">@dimen/_10sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_10sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_10sdp</item>
    </style>





    <style name="TextLimitStyle" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">@color/lightTextColor</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">18sp</item>
    </style>

    <style name="TextLimitError" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">@color/lightTextColor</item>
    </style>



    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:tint">@android:color/transparent</item>
    </style>

</resources>