<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:orientation="vertical">




    <com.google.android.material.card.MaterialCardView
        style="@style/CustomCardCorners_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_60sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/_1sdp"
        app:cardPreventCornerOverlap="false">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">


            <TextView
                android:id="@+id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:text="Hello Akshay  Hello Akshay  Hello Akshay  Hello Akshay Hello Akshay Hello Akshay "
                android:textColor="@color/deepTextColor"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txt_1_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="@dimen/_1sdp"
                android:ellipsize="start"
                android:fontFamily="@font/roboto"
                android:text="08.42 Am"
                android:textColor="@color/lightTextColor"
                android:textSize="@dimen/_8ssp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        style="@style/CustomCardCorners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="@dimen/_1sdp"
        app:cardBackgroundColor="@color/themeColorTint"
        app:cardElevation="@dimen/_1sdp"
        app:cardPreventCornerOverlap="false">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:text="Hello Rahul"
                android:textColor="@color/deepTextColor"
                android:textSize="@dimen/_11ssp" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_2_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/roboto"
                    android:text="08.42 Am"
                    android:textColor="@color/lightTextColor"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:src="@drawable/ic_baseline_done_all_24" />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

</androidx.appcompat.widget.LinearLayoutCompat>